<p id="notice"><%= notice %></p>


<div class="container">
  <hr><h3 class="text-right"><%= link_to 'New Game', new_game_path %></h3>
  <hr><h1 class="text-center">Game List</h1><hr>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Begin date</th>
        <th scope="col">End date</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.title %></td>
          <td><%= game.begin_date.strftime("%Y-%m-%d") %></td>
          <td><%= game.end_date.strftime("%Y-%m-%d") %></td>
          <td><%= link_to 'Show', game %> |
            <%= link_to 'Edit', edit_game_path(game) %> |
            <%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Game', new_game_path %>
</div>
<br>

