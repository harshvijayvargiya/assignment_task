<p id="notice"><%= notice %></p>
<div class="container">
  <hr><h3 class="text-right"><%= link_to 'Edit', edit_game_path(@game) %> |
  <%= link_to 'Back', games_path %></h3>
  <hr><h1 class="text-center">Game Details</h1><hr>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Begin Date</th>
        <th scope="col">End Date</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @game.title %></td>
        <td><%= @game.begin_date.strftime("%Y-%m-%d") %></td>
        <td><%= @game.end_date.strftime("%Y-%m-%d") %></td>
      </tr>
    </tbody>
  </table>
</div>
