<p id="notice"><%= notice %></p>

<div class="container">
  <hr><h3 class="text-right"><%= link_to 'New Player', new_player_path %></h3>
  <hr><h1 class="text-center">Player List</h1><hr>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Full Name</th>
        <th scope="col">Join date</th>
        <th scope="col">Contact</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><%= player.full_name %></td>
          <td><%= player.join_date.strftime("%Y-%m-%d") %></td>
          <td><%= player.contact %></td>
          <td>
            <%= link_to 'Show', player %> |
            <%= link_to 'Edit', edit_player_path(player) %> |
            <%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Player', new_player_path %>
</div>
<br>

