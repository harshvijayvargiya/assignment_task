
<!-- container-->
<div class="container">
  <hr><h1 class="text-center">Score Board</h1><hr>
  <table class="table">
  <thead>
    <tr>
      <th>Player</th>
      <th>No of Game</th>
      <th>Aaverage Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
     <tr>
      <td><%= player.full_name %></td>
      <td><%= player.scores.count %></td>
      <td><%= player.scores.average(:points).round(2) %></td>
    </tr>
  <%end%>
  </tbody>
</table>